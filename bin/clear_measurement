#!/bin/bash
#/////////////////////////////////////////////////////////////////////////////////////
# Nanohome clear a MEASUREMENT from InfluxDB
#/////////////////////////////////////////////////////////////////////////////////////

# Catch Parameters
MEASUREMENT="$1"

# Delete measurement
if [ -n "${MEASUREMENT}" ]; then

	influx delete --bucket "${INFLUX_BUCKET_MEASUREMENTS}" \
	  --start '1970-01-01T00:00:00Z' \
	  --stop $(date --utc +"%Y-%m-%dT%H:%M:%SZ") \
	  --predicate '_MEASUREMENT="'"${MEASUREMENT}"'"'
fi
